{
    "name": "thereddot/monolog-extra-bundle",
    "type": "symfony-bundle",
    "description": "Symfony bundle with extra processors and logger to log request/response",
    "keywords": [
        "log",
        "logging"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Floran Brutel",
            "email": "bonjour@floran.fr"
        }
    ],
    "require": {
        "php": "^7.1.0",
        "symfony/config": "^3.4 || ^4.4 || ^5.0",
        "symfony/dependency-injection": "^3.4 || ^4.4 || ^5.0",
        "symfony/http-foundation": "^3.4 || ^4.4 || ^5.0",
        "symfony/http-kernel": "^3.4 || ^4.4 || ^5.0",
        "symfony/monolog-bundle": "^3.0",
        "symfony/property-access": "^3.4 || ^4.4 || ^5.0",
        "symfony/security-core": "^3.4 || ^4.4 || ^5.0"
    },
    "replace": {
        "hexanet/monolog-extra-bundle": "self.version"
    },
    "require-dev": {
        "phpspec/phpspec": "^5.1|^6.0",
        "phpstan/phpstan": "^0.12.1",
        "phpstan/phpstan-strict-rules": "^0.12.0",
        "symplify/easy-coding-standard": "^6.0|^7.0"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.0-dev"
        }
    },
    "scripts": {
        "cs-check": "vendor/bin/ecs check spec src",
        "cs-fix": "vendor/bin/ecs check spec src --fix"
    },
    "autoload": {
        "psr-4": {
            "TheRedDot\\MonologExtraBundle\\": "src"
        }
    }
}
